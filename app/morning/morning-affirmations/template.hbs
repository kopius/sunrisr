

{{#unless model.affirmationInProgress}}
<h2>Good morning!</h2>
<br />
<button class='btn btn-lg btn-primary' {{action 'startAffirming' model on='click'}}>
  Start Affirming
</button>
<br />
{{/unless}}

<div>
{{#each model as |morningAffirmation|}}
  {{#if morningAffirmation.isActive}}
    {{sunrisr-quiz morningAffirmation=morningAffirmation
                   checkMatch='checkMatch'}}
  {{/if}}
{{/each}}
</div>

{{#if model.firstObject.morning.completedAll}}
  <h2>Well Done</h2>
  <h4>Have a wonderful day!</h4>
{{/if}}

<br />

<!-- This header changes depending on whether
all morning affirmations have been completed -->
{{#if model.firstObject.morning.completedAll}}
  <h4>Your affirmations:</h4>
{{else}}
  {{#if model.affirmationInProgress}}
    <h4>Affirmations completed so far:</h4>
  {{/if}}
{{/if}}

<ul>
{{#each model as |morningAffirmation|}}
  {{#if morningAffirmation.completed}}
    <li>
      {{morningAffirmation.affirmation.prompt}}
      {{morningAffirmation.affirmation.response}}
    </li>
  {{/if}}
{{/each}}
</ul>
