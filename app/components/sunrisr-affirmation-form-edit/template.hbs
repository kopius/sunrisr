<form class='row' {{action 'save' affirmation on='submit'}}>
  <div class='col-xs-12 col-sm-4'>
    {{input class='input-group form-control'
            value=affirmation.prompt}}
  </div>
  <div class='col-xs-12 col-sm-8'>
    {{input value=affirmation.response
            class='input-group form-control'}}
  </div>
  <div class='col-xs-12'>
    <button type='submit' class='btn btn-sm btn-primary'>Save</button>
    <button class='btn btn-sm btn-warning' {{action 'cancel' affirmation on='click'}}>Cancel</button>
  </div>
</form>
<hr />
