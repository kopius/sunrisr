<h4>Add a new affirmation:</h4>

<form class='row' {{action 'create' on='submit'}}>
  <div class='col-xs-12 col-sm-4'>
    {{input placeholder='Prompt (e.g. "Today I will")'
            class='input-group form-control sunrisr-prompt'
            value=form.prompt}}
  </div>
  <div class='col-xs-12 col-sm-8'>
    {{input placeholder='Response (e.g. "reach for the stars")'
            class='input-group form-control sunrisr-response'
            value=form.response}}
  </div>
  <div class='col-xs-12'>
    <button type='submit' class='btn btn-sm btn-primary top-margin'>Add Affirmation</button>
    <button class='btn btn-sm btn-danger top-margin' {{action 'reset' on='click'}}>Clear Form</button>
  </div>
</form>
